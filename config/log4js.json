{
    "appenders": {
      "app": {
        "type": "file",
        "filename": "logs/app.log",
        "maxLogSize": 10485760,
        "numBackups": 2,
        "append": false
      },
      "errorFile": {
        "type": "file",
        "filename": "logs/errors.log"
      },
      "errors": {
        "type": "logLevelFilter",
        "level": "ERROR",
        "appender": "errorFile"
      }
    },
    "categories": {
        "default": { "appenders": [ "app", "errors"], "level": "DEBUG" }
    }
  }